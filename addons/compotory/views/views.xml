<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.hardware.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="is_hardware"/>
                    <label for="is_hardware"/>
                </div>
            </div>
            
            <notebook position="inside">
                <page string="Hardware" invisible="not is_hardware">
                    <group>
                        <field name="component_type"/>
                        <field name="manufacturer" options="{'no_create_edit': True}"/>
                    </group>

                    <!-- CPU Specifications -->
                    <group string="CPU Specifications" invisible="component_type != 'cpu'">
                        <group>
                            <field name="cpu_socket"/>
                            <field name="cpu_cores"/>
                            <field name="cpu_threads"/>
                            <field name="cpu_base_clock"/>
                        </group>
                        <group>
                            <field name="cpu_boost_clock"/>
                            <field name="cpu_cache"/>
                            <field name="cpu_tdp"/>
                        </group>
                    </group>

                    <!-- GPU Specifications -->
                    <group string="GPU Specifications" invisible="component_type != 'gpu'">
                        <group>
                            <field name="gpu_memory"/>
                            <field name="gpu_type"/>
                        </group>
                        <group>
                            <field name="gpu_bus"/>
                            <field name="gpu_tdp"/>
                        </group>
                    </group>

                    <!-- RAM Specifications -->
                    <group string="RAM Specifications" invisible="component_type != 'ram'">
                        <group>
                            <field name="ram_capacity"/>
                            <field name="ram_type"/>
                        </group>
                        <group>
                            <field name="ram_speed"/>
                            <field name="ram_latency"/>
                        </group>
                    </group>

                    <!-- Motherboard Specifications -->
                    <group string="Motherboard Specifications" invisible="component_type != 'motherboard'">
                        <group>
                            <field name="mb_socket"/>
                            <field name="mb_chipset"/>
                            <field name="mb_form_factor"/>
                        </group>
                        <group>
                            <field name="mb_ram_slots"/>
                            <field name="mb_ram_type"/>
                        </group>
                    </group>

                    <!-- Case Specifications -->
                    <group string="Case Specifications" invisible="component_type != 'case'">
                        <group>
                            <field name="case_form_factor"/>
                            <field name="case_max_gpu_length"/>
                        </group>
                        <group>
                            <field name="case_max_psu_length"/>
                            <field name="case_included_fans"/>
                            <field name="case_max_fans"/>
                        </group>
                    </group>

                    <!-- Power Supply Specifications -->
                    <group string="Power Supply Specifications" invisible="component_type != 'psu'">
                        <group>
                            <field name="psu_wattage"/>
                            <field name="psu_efficiency"/>
                        </group>
                        <group>
                            <field name="psu_modular"/>
                            <field name="psu_form_factor"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>